<h1>Listing telephones</h1>

<table>
  <thead>
    <tr>
      <th>Telephone type</th>
      <th>Contact</th>
      <th>Telephone</th>
      <th>Observation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @telephones.each do |telephone| %>
      <tr>
        <td><%= telephone.telephone_type_id %></td>
        <td><%= telephone.contact %></td>
        <td><%= telephone.telephone %></td>
        <td><%= telephone.observation %></td>
        <td><%= link_to 'Show', telephone %></td>
        <td><%= link_to 'Edit', edit_telephone_path(telephone) %></td>
        <td><%= link_to 'Destroy', telephone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

