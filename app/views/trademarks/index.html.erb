<h1>Listing trademarks</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Observation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trademarks.each do |trademark| %>
      <tr>
        <td><%= trademark.code %></td>
        <td><%= trademark.description %></td>
        <td><%= trademark.observation %></td>
        <td><%= link_to 'Show', trademark %></td>
        <td><%= link_to 'Edit', edit_trademark_path(trademark) %></td>
        <td><%= link_to 'Destroy', trademark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

